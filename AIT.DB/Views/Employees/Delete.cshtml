@model AIT.DB.Models.Employee

@{
    ViewData["Title"] = "Xóa Nhân Viên";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}
<div class="pagetitle">
    <h1>Xóa Nhân Viên</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <a asp-controller="Employees" asp-action="Index" class="breadcrumb-item active">Danh sách nhân viên</a>
            <li class="breadcrumb-item active">Xoá Nhân Viên</li>
        </ol>
    </nav>
</div>
<div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
    <i class="bi bi-exclamation-triangle me-1"></i><strong>Error!</strong> Xóa vĩnh viên xin cân nhắc
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<div class="card">
    <h4 style="text-align:center">@Model.EmployeeName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dob)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dob)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateFirst)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateFirst)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortIntro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortIntro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar):
        </dt>
        <dd class="col-sm-10">
            <img style="width:120px;height:120px;object-fit:cover" src="~/Images/employees/@Model.Avatar" alt="images @Model.EmployeeName fail" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == false)
            {
                <span class="badge badge-success" style="background-color:green">Hoạt Động</span>
            }
            else
            {
                <p class="badge badge-warning" style="background-color: #ffc107">Tạm nghỉ</p>
            }
        </dd>
        <dt class="col-sm-2">
            Chi nhánh tại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Branch.BranchName)
        </dd>
        <dt class="col-sm-2">
           Kỹ Năng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Skill.SkillName)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#basicModal"><i class="bi bi-trash"></i> Xóa</button>
        @if (Model.Status)
        {
            <a asp-action="Inactivity" class="btn btn-dark"><i class="ri-arrow-go-back-line"></i> Quay Lại</a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-dark"><i class="ri-arrow-go-back-line"></i> Quay Lại</a>
        }
        <div class="modal fade" id="basicModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Bạn đã chắc chắn xóa nhân viên @Model.EmployeeName?</h5>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-lg"></i> Đóng</button>
                        <button type="submit" class="btn btn-success"><i class="ri-check-fill"></i>Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
