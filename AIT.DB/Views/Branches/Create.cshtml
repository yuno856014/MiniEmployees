@model AIT.DB.Models.Branch

@{
    ViewData["Title"] = "Thêm Mới Chi Nhánh";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="pagetitle">
    <h1>Thêm Mới Chi Nhánh</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <a asp-controller="Branches" asp-action="Index" class="breadcrumb-item active">Danh sách chi nhánh</a>
            <li class="breadcrumb-item active">Thêm Mới Chi Nhánh</li>
        </ol>
    </nav>
</div>
<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-3">
                <label class="control-label col-sm-1">Chi Nhánh:</label>
                <div class="col-sm-11">
                    <input asp-for="BranchName" class="form-control" style="width:90%" />
                    <span asp-validation-for="BranchName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="control-label col-sm-1">Địa Chỉ:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" placeholder="Địa Chỉ" asp-for="Address" style="height: 100px;"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-success"><i class="ri-check-fill"></i>Lưu</button>
                <a asp-action="Index" class="btn btn-dark"><i class="ri-arrow-go-back-line"></i> Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
