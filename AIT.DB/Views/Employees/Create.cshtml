@model AIT.DB.Models.Employee

@{
    ViewData["Title"] = "Thêm Mới Nhân Viên";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<div class="pagetitle">
    <h1>Thêm Mới Nhân Viên</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <a asp-controller="Employees" asp-action="Index" class="breadcrumb-item active">Danh sách nhân viên</a>
            <li class="breadcrumb-item active">Thêm Mới Nhân Viên</li>
        </ol>
    </nav>
</div>
<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-3">
                <label asp-for="EmployeeName" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="EmployeeName" class="form-control" />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Address" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" placeholder="Địa chỉ" asp-for="Address" style="height: 100px;"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Dob" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Dob" type="date" class="form-control" />
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="DateFirst" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="DateFirst" type="date" class="form-control" />
                    <span asp-validation-for="DateFirst" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="BranchId" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <select asp-for="BranchId" class="form-select" asp-items="ViewBag.BranchId"></select>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="SkillId" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <select asp-for="SkillId" class="form-select" asp-items="ViewBag.SkillId"></select>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Avatar" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" id="formFile" name="fAvt">
                    <img class="img-thumbnail no-photo" style="width:100px;height:100px;object-fit:cover" src="~/Images/employees/noavatar.jpg" alt="no avatar" />
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="ShortIntro" class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" placeholder="Giới Thiệu" asp-for="ShortIntro" style="height: 100px;"></textarea>
                    <span asp-validation-for="ShortIntro" class="text-danger"></span>
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-success"><i class="ri-check-fill"></i>Lưu</button>
                <a asp-action="Index" class="btn btn-dark"><i class="ri-arrow-go-back-line"></i> Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script asp-append-version="true">
        $(".form-control").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $('.no-photo').attr('src', window.URL.createObjectURL($(this)[0].files[0]));
            $(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
