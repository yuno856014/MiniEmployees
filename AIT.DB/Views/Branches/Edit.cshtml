@model AIT.DB.Models.Branch

@{
    ViewData["Title"] = "Chỉnh Sửa Chi Nhánh";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="pagetitle">
    <h1>Chỉnh Sửa Chi Nhánh</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <a asp-controller="Branches" asp-action="Index" class="breadcrumb-item active">Danh sách chi nhánh</a>
            <li class="breadcrumb-item active">Chỉnh sửa chi nhánh @Model.BranchName</li>
        </ol>
    </nav>
</div>
<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BranchId" />
            <div class="form-group row mb-3">
                <label class="col-sm-1 col-form-label">Chi Nhánh: </label>
                <div class="col-sm-11" style="width:90%">
                    <input asp-for="BranchName" class="form-control" />
                    <span asp-validation-for="BranchName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class=" col-sm-1 control-label">Địa Chỉ:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" placeholder="Địa Chỉ" asp-for="Address" style="height: 100px;"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="text-right">
                <button type="button" class="btn btn-success" data-bs-toggle="modal"  data-bs-target="#basicModal"><i class="ri-check-fill"></i>Lưu</button>
                <a asp-action="Index" class="btn btn-dark"><i class="ri-arrow-go-back-line"></i>Quay Lại</a>
            </div>
            <div class="modal fade" id="basicModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Bạn đã chắc chắn thay đổi chi nhánh @Model.BranchName này?</h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="bi bi-x-lg"></i> Đóng</button>
                            <button type="submit" class="btn btn-success"><i class="ri-check-fill"></i>Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
