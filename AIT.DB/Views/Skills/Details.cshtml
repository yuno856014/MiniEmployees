@model AIT.DB.Models.Skill

@{
    ViewData["Title"] = "Xem Kỹ Năng";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<div class="pagetitle">
    <h1>Xem Kỹ Năng @Model.SkillName</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <a asp-controller="Skills" asp-action="Index" class="breadcrumb-item active">Danh sách kỹ năng</a>
            <li class="breadcrumb-item active">Xem kỹ năng @Model.SkillName</li>
        </ol>
    </nav>
</div>
<div class="card">
    <h4 style="text-align:center">@Model.SkillName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SkillName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SkillName)
        </dd>
    </dl>
</div>
<div class="text-right">
    <a asp-action="Edit" asp-route-id="@Model.SkillId" class="btn btn-primary"><i class="bi bi-pen"></i> Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-dark"><i class="ri-arrow-go-back-line"></i> Quay Lại</a>
</div>
